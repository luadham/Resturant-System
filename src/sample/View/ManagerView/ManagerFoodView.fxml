<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller.ManagerController.ManagerFoodController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label text="Add New Food" textFill="#575755">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="foodName" onKeyTyped="#clearLabel" prefHeight="25.0" prefWidth="408.0" promptText="Food Name">
               <VBox.margin>
                  <Insets bottom="16.0" left="64.0" right="64.0" top="16.0" />
               </VBox.margin>
            </TextField>
            <TextArea fx:id="foodDescription" prefHeight="33.0" prefWidth="600.0" promptText="Description...">
               <VBox.margin>
                  <Insets bottom="16.0" left="64.0" right="64.0" />
               </VBox.margin>
            </TextArea>
            <TextField fx:id="foodPrice" promptText="Food Price">
               <VBox.margin>
                  <Insets bottom="16.0" left="64.0" right="64.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </TextField>
            <Button fx:id="saveFood" mnemonicParsing="false" onAction="#saveFoodButton" style="-fx-background-color: #ef912d;" text="Save Food" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="16.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="errorLabel" textFill="RED">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</Pane>
